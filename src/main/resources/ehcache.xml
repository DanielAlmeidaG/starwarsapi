<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="ehcache.xsd"
         updateCheck="true"
         monitoring="autodetect"
         dynamicConfig="true">

    <cache name="findByName"
           maxEntriesLocalHeap="10000"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="86400"
           transactionalMode="off">
        <persistence strategy="none"/>
    </cache>

    <cache name="findByUuid"
           maxEntriesLocalHeap="10000"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="86400"
           transactionalMode="off">
        <persistence strategy="none"/>
    </cache>

    <cache name="SwapiPlanetsSearch"
           maxEntriesLocalHeap="10000"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="86400"
           transactionalMode="off">
        <persistence strategy="none"/>
    </cache>

    <cache name="SwapiPlanetUri"
           maxEntriesLocalHeap="10000"
           eternal="false"
           timeToIdleSeconds="0"
           timeToLiveSeconds="86400"
           transactionalMode="off">
        <persistence strategy="none"/>
    </cache>

</ehcache>